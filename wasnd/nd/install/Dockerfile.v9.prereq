### IBM WebSphere eXtreme scale client - exclusive OR with the WXS-WAS-Server ######################
RUN   /opt/IBM/InstallationManager/eclipse/tools/imcl listavailablePackages -repositories $WXS_REPOS  \
      &&  /opt/IBM/InstallationManager/eclipse/tools/imcl -showProgress \
          -acceptLicense install $WXS_CLIENT_VERSION \
          -repositories $WXS_REPOS \
          -installationDirectory /opt/IBM/WebSphere/AppServer \
          -preferences com.ibm.cic.common.core.preferences.preserveDownloadedArtifacts=false,com.ibm.cic.common.core.preferences.keepFetchedFiles=false \
      &&  /opt/IBM/InstallationManager/eclipse/tools/imcl -showProgress \
          -acceptLicense install $WXS_CLIENT_FIX_LIST \
          -repositories $WXS_REPOS \
          -installationDirectory /opt/IBM/WebSphere/AppServer \
          -preferences com.ibm.cic.common.core.preferences.preserveDownloadedArtifacts=false,com.ibm.cic.common.core.preferences.keepFetchedFiles=false \
      &&  /opt/IBM/InstallationManager/eclipse/tools/imcl listInstalledPackages -long


CMD ["tar","cvf","/tmp/was9.tar","/opt/IBM/WebSphere/AppServer"]
